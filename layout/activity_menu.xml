<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <!--This is the button that will send the user to the greetApp-->
    <Button
        android:id="@+id/GreetApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GreetApp" />

    <!--This is the button that will send the user to the IMC App.-->
    <Button
        android:id="@+id/btnIMCApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC App" />

</LinearLayout>